<div class="contents row">
  <div class="container">

    <%= form_for(@articles) do |f| %>
    <p>投稿する？</p>
    <%= f.text_field :title, placeholder: 'タイトル' %>
    <%= f.text_field :image, placeholder: '画像URL' %>
    <%= f.text_area :text, placeholder: '本文', style: 'width: 100% ;height: 200px;' %>

    <%= f.submit "投稿する" %>
    <% end %>

  </div>
</div>
