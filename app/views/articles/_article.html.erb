<div class="container">
  <div class="card horizontal">
    <div class="card-image">
      <%= image_tag article.image %>
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <h5><%= article.title %></h5>
        <p class="name"><%= article.text %></p>
        <br><p>＠<%= article.user.nickname %></p>
        <p>書いた日：<%= article.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div class="card-action">
        <%= link_to_unless_current('詳細', "/articles/#{article.id}", method: :get, :controller => "articles",:action => "show"){} %>
        <% if current_user_has?(article) %>
        <%= link_to '編集', "/articles/#{article.id}/edit", method: :get %>
        <%= link_to '削除', "/articles/#{article.id}", method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
